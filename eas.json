{
  "cli": {
    "version": ">= 16.3.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      }
    },
    "apk": {
      "android": {
        "buildType": "apk"
      }
    },
    "simulator": {
      "developmentClient": true,
      "ios": {
        "simulator": true
      }
    },
    "ios": {
      "distribution": "internal"
    },
    "adhoc": {
      "ios": {
        "distribution": "internal"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
